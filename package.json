{
  "name": "composer-restorer",
  "scripts": {
    "postinstall": "jspm install -y && npm run build",
    "prewatch-sass": "rm -rf ./public/css && mkdir ./public/css && npm run build-sass",
    "watch-sass": "wr 'npm run build-sass' ./public/sass",
    "build-sass": "./bin/build-sass.js",
    "build": "npm run build-sass",
    "bundle": "jspm bundle javascripts/app/main --inject --minify"
  },
  "devDependencies": {
    "autoprefixer": "^5.1.0",
    "babel": "^5.0.10",
    "browserify": "^6.3.2",
    "glob": "^5.0.3",
    "mkdirp": "^0.5.0",
    "node-sass": "~3.4",
    "q": "^1.2.0",
    "watchify": "^2.1.1",
    "wr": "^1.3.1"
  },
  "dependencies": {
    "jspm": "^0.16.39"
  },
  "jspm": {
    "directories": {
      "baseURL": "public"
    },
    "dependencies": {
      "angular": "github:angular/bower-angular@^1.3.15",
      "angular-route": "github:angular/bower-angular-route@^1.3.15",
      "angular-sanitize": "github:angular/bower-angular-sanitize@^1.3.15",
      "angular/bower-angular-sanitize": "github:angular/bower-angular-sanitize@^1.3.15",
      "bootstrap": "npm:bootstrap@^3",
      "composer-components": "github:guardian/tools-components@^1.0.6",
      "flatten": "npm:flatten@^0.0.1",
      "guardian/scribe-plugin-noting": "github:guardian/scribe-plugin-noting@^0.3.29",
      "lodash.get": "npm:lodash.get@^4.3.0",
      "md5": "npm:blueimp-md5@^2.3.0",
      "mediator": "npm:mediator-js@^0.9.9",
      "mixpanel": "npm:mixpanel-browser^2.4.2",
      "mixpanel-browser": "npm:mixpanel-browser@^2.7.2",
      "moment": "npm:moment@^2.10.2",
      "necolas/normalize.css": "npm:normalize.css@3.0.2",
      "normalize.css": "npm:normalize.css@^3.0.3",
      "svg": "github:cutandpastey/plugin-svg@^0.2.0",
      "systemjs-plugin-css": "npm:systemjs-plugin-css@^0.1.20"
    },
    "devDependencies": {
      "babel": "npm:babel@^4.7.16",
      "babel-runtime": "npm:babel-runtime@^4.7.16",
      "traceur": "github:jmcriffey/bower-traceur@0.0.93",
      "traceur-runtime": "github:jmcriffey/bower-traceur-runtime@0.0.93"
    }
  }
}
