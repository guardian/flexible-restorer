{
  "defaultStacks": ["composer"],
  "packages": {
    "restorer" : {
      "type": "autoscaling",
      "fileName": "composer-restorer",
      "data": {
        "bucket": "composer-dist",
        "publicReadAcl": false
      }
    }
  },
  "recipes": {
    "default": {
      "depends": ["artifactUploadOnly", "deployOnly"]
    },

    "deployOnly": {
      "actionsBeforeApp": ["restorer.deploy"]
    },

    "artifactUploadOnly": {
      "actionsBeforeApp": ["restorer.uploadArtifacts"]
    }
  }
}