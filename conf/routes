# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /lookup/:id                           controllers.Application.lookupById(id)

GET     /                                     controllers.Application.index

GET     /oauthCallback                        controllers.Login.oauthCallback

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.at(path="/public", file)


# Versions
GET     /content/:contentId/versions                           controllers.Versions.index(contentId: String)
GET     /content/:contentId/versions/:versionId                controllers.Versions.show(contentId: String, versionId: String)
PUT     /content/:contentId/versions/:versionId                controllers.Versions.restore(contentId: String, versionId: String)